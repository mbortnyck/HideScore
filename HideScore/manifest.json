{
  "manifest_version": 2,
  "name": "Hide Scores",
  "version": "0.1",
  "description": "Hides numerical scores from reviews across various websites",
  "author": "Michael Bortnyck",

  "permissions": [
    "tabs",
    "http://pitchfork.com/*",
    "http://www.gamespot.com/*",
    "https://www.residentadvisor.net/*"
  ],

  "content_scripts": [
    {
      "matches": ["http://pitchfork.com/*", "https://pitchfork.com/*"],
      "css": ["pitchfork.css"],
      "all_frames": true
    },
    {
      "matches": ["http://www.gamespot.com/*", "https://www.gamespot.com/*"],
      "css": ["gamespot.css"],
      "all_frames": true
    },
    {
      "matches": ["http://www.residentadvisor.net/*", "https://www.residentadvisor.net/*"],
      "css": ["residentadvisor.css"],
      "all_frames": true
    },
    {
      "matches": ["https://www.residentadvisor.net/reviews.aspx"],
      "css": ["residentadvisor_reviews.css"],
      "all_frames": true
    }
  ]
}