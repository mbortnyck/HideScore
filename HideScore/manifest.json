{
  "manifest_version": 2,
  "name": "Hide Scores",
  "version": "0.1",
  "description": "Hides numerical scores from reviews across various websites",
  "author": "Michael Bortnyck",

  "permissions": [
    "tabs",
    "http://pitchfork.com/*",
    "http://gamespot.com/*",
    "http://residentadvisor.net/*"
  ],

  "content_scripts": [
    {
      "matches": ["http://pitchfork.com/*"],
      "css": ["pitchfork.css"],
      "all_frames": true
    },
    {
      "matches": ["http://gamespot.com/*"],
      "css": ["gamespot.css"],
      "all_frames": true
    },
    {
      "matches": ["http://residentadvisor.net/*"],
      "js": ["residentadvisor.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["residentadvisor.css"]
}