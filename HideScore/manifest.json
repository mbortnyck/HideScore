{
  "manifest_version": 2,
  "name": "Hide Scores",
  "version": "0.1",
  "description": "Hides numerical scores from reviews across various websites",
  "author": "Michael Bortnyck",

  "permissions": [
    "tabs",
    "http://pitchfork.com/*",
    "http://gamespot.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.gamespot.com/*"],
      "css": ["gamespot.css"],
      "all_frames": true
    },
    {
      "matches": ["http://pitchfork.com/*"],
      "css": ["pitchfork.css"],
      "all_frames": true
    }
  ]
}