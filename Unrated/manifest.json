{
  "manifest_version": 2,
  "name": "Unrated",
  "version": "0.1",
  "description": "Hides numerical scores from reviews across various websites",
  "author": "Michael Bortnyck",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },

  "content_scripts": [
    {
      "matches": [
        "http://www.avclub.com/*", "https://www.avclub.com/*",
        "http://www.gamespot.com/*", "https://www.gamespot.com/*",
        "http://www.ign.com/*", "https://www.ign.com/*",
        "http://www.nme.com/*", "https://www.nme.com/*",
        "http://pitchfork.com/*", "https://pitchfork.com/*",
        "http://www.residentadvisor.net/*", "https://www.residentadvisor.net/*",
        "http://www.rollingstone.com/*", "https://www.rollingstone.com/*",
        "http://www.xlr8r.com/*", "https://www.xlr8r.com/*"
      ],
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    "styles/avclub.css",
    "styles/gamespot.css",
    "styles/ign.css",
    "styles/nme.css",
    "styles/pitchfork.css",
    "styles/residentadvisor.css",
    "styles/residentadvisor_reviews.css",
    "styles/rollingstone.css",
    "styles/xlr8r.css"
  ]
}